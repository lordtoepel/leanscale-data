{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "client.schema.json",
  "title": "Client",
  "type": "object",
  "required": ["id", "organization_id", "name", "created_at"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "organization_id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "is_archived": {
      "type": "boolean",
      "default": false
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
