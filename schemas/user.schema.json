{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "user.schema.json",
  "title": "User",
  "type": "object",
  "required": ["id", "name", "email", "created_at"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "timezone": {
      "type": "string",
      "default": "America/Denver"
    },
    "week_start": {
      "type": "string",
      "enum": ["monday", "tuesday", "wednesday", "thursday", "friday", "saturday", "sunday"],
      "default": "monday"
    },
    "is_placeholder": {
      "type": "boolean",
      "default": false
    },
    "profile_photo_url": {
      "type": ["string", "null"],
      "format": "uri"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
