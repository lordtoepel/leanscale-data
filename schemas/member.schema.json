{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "member.schema.json",
  "title": "Organization Member",
  "type": "object",
  "required": ["id", "organization_id", "user_id", "role", "created_at"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "organization_id": {
      "type": "string",
      "format": "uuid"
    },
    "user_id": {
      "type": "string",
      "format": "uuid"
    },
    "role": {
      "type": "string",
      "enum": ["owner", "admin", "gtm-architect", "gtm-engineer", "client", "placeholder"]
    },
    "billable_rate": {
      "type": ["number", "null"],
      "minimum": 0
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
