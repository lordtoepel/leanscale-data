{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "project.schema.json",
  "title": "Project",
  "type": "object",
  "required": ["id", "organization_id", "name", "created_at"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "organization_id": {
      "type": "string",
      "format": "uuid"
    },
    "client_id": {
      "type": ["string", "null"],
      "format": "uuid"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "color": {
      "type": "string",
      "pattern": "^#[0-9a-fA-F]{6}$",
      "default": "#3B82F6"
    },
    "is_billable": {
      "type": "boolean",
      "default": true
    },
    "billable_rate": {
      "type": ["number", "null"],
      "minimum": 0
    },
    "estimated_time": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Estimated time in seconds"
    },
    "is_archived": {
      "type": "boolean",
      "default": false
    },
    "is_public": {
      "type": "boolean",
      "default": false
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
