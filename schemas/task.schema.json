{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "task.schema.json",
  "title": "Task",
  "type": "object",
  "required": ["id", "organization_id", "project_id", "name", "created_at"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "organization_id": {
      "type": "string",
      "format": "uuid"
    },
    "project_id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 500
    },
    "is_done": {
      "type": "boolean",
      "default": false
    },
    "estimated_time": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Estimated time in seconds"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
